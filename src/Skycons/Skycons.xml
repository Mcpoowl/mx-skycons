<?xml version="1.0" encoding="utf-8" ?>
<widget id="Skycons.widget.Skycons" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Skycons</name>
    <description>The description of this widget.</description>
    <icon>
        
    </icon>

    <properties>
        <property key="icon" type="enumeration" required="true" defaultValue="clear_day">
            <caption>Icon</caption>
            <category>Appearance</category>
            <description>The icon to show.</description>
            <enumerationValues>
                <enumerationValue key="clear_day">Sunny / Clear (Day)</enumerationValue>
                <enumerationValue key="clear_night">Clear (Night)</enumerationValue>
                <enumerationValue key="partly_cloudy_day">Partly Cloudy (Day)</enumerationValue>
                <enumerationValue key="partly_cloudy_night">Partly Cloudy (Night)</enumerationValue>
                <enumerationValue key="cloudy">Cloudy</enumerationValue>
                <enumerationValue key="rain">Rain</enumerationValue>
                <enumerationValue key="sleet">Sleet</enumerationValue>
                <enumerationValue key="snow">Snow</enumerationValue>
                <enumerationValue key="wind">Wind</enumerationValue>
                <enumerationValue key="fog">Fog</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" required="true" defaultValue="128">
            <caption>Width</caption>
            <category>Appearance</category>
            <description>Width of the canvas. Default is 128.</description>
        </property>
        <property key="height" type="integer" required="true" defaultValue="128">
            <caption>Height</caption>
            <category>Appearance</category>
            <description>Height of the canvas. Default is 128.</description>
        </property>
        <property key="coloring" type="enumeration" required="true" defaultValue="colored">
            <caption>Colors</caption>
            <category>Appearance</category>
            <description>What colors to use for the icon: One color or 'real life' coloring</description>
            <enumerationValues>
                <enumerationValue key="one">One color</enumerationValue>
                <enumerationValue key="colored">Colored</enumerationValue>
            </enumerationValues>
        </property>
        <property key="color" type="string" required="false" defaultValue="#000">
            <caption>Color</caption>
            <category>Appearance</category>
            <description>When single color is selected, which color should the icons be?</description>
        </property>
        <property key="animated" type="boolean" required="true" defaultValue="true">
            <caption>Animate</caption>
            <category>Appearance</category>
            <description>Animate the icon?</description>
        </property>
        <property key="useForecast" type="boolean" required="true" defaultValue="false">
            <caption>Forecast</caption>
            <category>Forecast</category>
            <description>Use the to Darksky API get an accurate weather forecast for your location. Using this will overrule the icon set in the previous tab</description>
        </property>
        <property key="API" type="string" required="false">
            <caption>API key</caption>
            <category>Forecast</category>
            <description>Register for an account at https://darksky.net/dev/ and look for your API key. The first 1000 calls per day are free!</description>
        </property>
        <property key="lat" type="microflow" required="false">
            <caption>Latitude</caption>
            <category>Forecast</category>
            <description>Microflow which should return the latitude as a String</description>
            <returnType type="String" />
        </property>
        <property key="long" type="microflow" required="false">
            <caption>Longitude</caption>
            <category>Forecast</category>
            <description>Microflow which should return the longitude as a String</description>
            <returnType type="String" />
        </property>
        <property key="extraDays" type="integer" required="true" defaultValue="0">
            <caption>Extra days</caption>
            <category>Forecast</category>
            <description>Add extra days to the forecast date. 0 uses the current date</description>
        </property>
        <property key="showTemp" type="boolean" required="true" defaultValue="false">
            <caption>Show temperature</caption>
            <category>Forecast</category>
            <description>Show temperature below the icon. Only works if forecast is set to Yes</description>
        </property>
        <property key="temperatureScale" type="enumeration" required="true" defaultValue="C">
            <caption>Temperature scale</caption>
            <category>Forecast</category>
            <description>What scale to use?</description>
             <enumerationValues>
                <enumerationValue key="C">Celcius</enumerationValue>
                <enumerationValue key="F">Fahrenheit</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>
